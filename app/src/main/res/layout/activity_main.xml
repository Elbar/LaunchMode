<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_start_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Standard Launch mode" />


    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_start_single_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"

        android:text="Single Task Launch mode" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_start_single_instance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Single Instance Launch mode" />

</LinearLayout>